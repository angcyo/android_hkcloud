<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/up_login_pwd_rl"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/update_login_pwd"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/select_language_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:scaleType="matrix"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/common_divider" />

    <RelativeLayout
        android:id="@+id/up_paypwd_rl"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_uppay_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/update_pay_pwd"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:scaleType="matrix"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/auth_info_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/common_divider"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/account_auth_rl"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_account_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/account_auth"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/common_divider" />

    <LinearLayout
        android:id="@+id/account_auth_info_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_auth_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/account_auth" 
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_name_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:text="姓名：李四"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_card_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:text="身份证：360731354544345" 
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>