<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_activity_layout_bg_color"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="亲，这是国家一级机密区，您这都能找到啊，如果您不是间谍！欢迎加入我们的高级测试部组织    ：）"
        android:textColor="#00f"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="严重警告：赶紧退出本禁区，除非是内部人士，请勿擅动此处的任何一个开关！否则后果自负！后果很严重的哦……   ：）"
        android:textColor="#f00"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/rgEnvironment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/rbRelease"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="正式环境" />

            <RadioButton
                android:id="@+id/rbReleaseTest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="预测试环境"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/online_rbTest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="测试环境（分支）" 
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/rbTest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="测试环境（主干）" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1、服务器域名：" />

        <TextView
            android:id="@+id/tvServerDomain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="http://mobile.365sji.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2、IM服务端配置文件：" />

        <TextView
            android:id="@+id/tvIMServerDomain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="http://im.file.m.365sji.com:8080/hxcfg.ini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="确定"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="取消"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>