<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_pay_result_bg"
        android:gravity="center_vertical"
        android:paddingBottom="25dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:text="买家已付款"
            android:textColor="#FF3C00"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingTop="8dp"
            android:text="您的包裹正整装待发"
            android:textColor="#FF3C00"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="18dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="收 件 人："
                android:textColor="@color/common_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pay_name_product_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="罗小姐  1326645464"
                android:textColor="@color/common_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="收货地址："
                android:textColor="@color/common_text_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/pay_adress_product_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="广东省 龙华新区 民乐科技园"
                android:textColor="@color/common_text_color"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/common_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实 付 款："
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pay_money_product_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="￥13885.6"
            android:textColor="#FF3C00"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_goto_order_buy"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="28dp"
            android:layout_weight="1"
            android:background="@drawable/pay_result_hollow"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/common_text_color"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_goto_home_buy"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_weight="1"
            android:background="@drawable/pay_result_hollow"
            android:gravity="center"
            android:text="返回首页"
            android:textColor="@color/common_text_color"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>