<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <include layout="@layout/rdp_base_title_bar"/>

    <android.support.v4.view.CustomViewPager
        android:id="@+id/image_deteil_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:spacing="30dp"
        android:unselectedAlpha="1" />

    <LinearLayout
        android:id="@+id/layout_dot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal" />

    <ImageButton
        android:id="@+id/image_detail_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@null"
        android:padding="15dp"
        android:src="@drawable/shop_map_return"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/image_detail_ablume_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/image_detail_bottom_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.0"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:text="aaas" />

            <TextView
                android:id="@+id/image_detail_pic_num"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="8"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:text="saasasd" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/more_settings_ibt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:contentDescription="@null"
            android:padding="15dp"
            android:src="@drawable/com_more_settings" />
    </LinearLayout>

</RelativeLayout>