<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#E9E9EA" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/pay_type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:src="@drawable/pay_type_default_icon" />

        <TextView
            android:id="@+id/pay_type_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/pay_type_img"
            android:singleLine="true"
            android:text="微信支付"
            android:textColor="@color/common_text_color"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/pay_type_checkout_rb"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@drawable/common_check_selector"
            android:paddingRight="15dp" />
    </RelativeLayout>

</LinearLayout>