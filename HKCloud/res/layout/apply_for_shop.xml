<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEDF2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/iv_ads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/pic_advertisement" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="姓名:"
                android:textColor="#333333"
                android:textSize="@dimen/common_textview_size" />

            <com.huika.cloud.views.ClearableEditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:background="@null"
                 android:cursorVisible="true"
                 android:hint="请输入输入姓名"
                android:textColor="#333333"
                android:textSize="@dimen/common_textview_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F1F0F4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="身份证:"
                android:textColor="#333333"
                android:textSize="@dimen/common_textview_size" />

            <com.huika.cloud.views.ClearableEditText
                android:id="@+id/et_identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:background="@null"
                android:cursorVisible="true"
                android:textColor="#333333"
                android:hint="请输入身份证号"
                android:textSize="@dimen/common_textview_size" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center_vertical"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="手机号:"
                android:textColor="#333333"
                android:textSize="@dimen/common_textview_size" />

            <com.huika.cloud.views.ClearableEditText
                android:id="@+id/et_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:background="@null"
                android:cursorVisible="true"
                android:textColor="#333333"
                android:hint="请输入手机号"
                android:textSize="@dimen/common_textview_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F1F0F4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_ver_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/common_textview_size"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:text="验证码:" />

            <com.huika.cloud.views.ClearableEditText
                android:id="@+id/et_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:background="@null"
                android:textColor="#333333"
                android:cursorVisible="true"
                android:hint="请输入验证码"
                android:layout_centerVertical="true"
                android:textSize="@dimen/common_textview_size" />

            <Button
                android:id="@+id/bt_get_ver_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:text="获取验证码"
                android:textColor="#ff3c00"
                android:textSize="@dimen/common_textview_size" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_confirm_open_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/confirm_button_selected"
        android:text="确认开店"
        android:textColor="@color/white" />

</LinearLayout>