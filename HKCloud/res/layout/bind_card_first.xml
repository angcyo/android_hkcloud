<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请设置支付密码"
                android:textColor="@color/common_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请验证支付密码"
                android:textColor="@color/common_text_color"
                android:textSize="14sp"
                android:visibility="gone" />
            
            <TextView 
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置新的支付密码"
                android:textColor="@color/common_text_color"
                android:textSize="14sp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <com.huika.cloud.views.passwordview.GridPasswordView
            android:id="@+id/gpwv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="53dp"
            android:layout_marginTop="25dp">
        </com.huika.cloud.views.passwordview.GridPasswordView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/goto_bindcard_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp"
                  android:background="@drawable/conner_button"
                android:text="下一步"
                android:textColor="@color/white" />
            <Button 
                android:id="@+id/bt_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/conner_button"
                android:text="确认"
                android:textColor="@color/white" />
            <Button 
                android:id="@+id/bt_confirm_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/conner_button"
                android:text="确认"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>