<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/shop_history"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/shop_search_latest_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#eff0f2"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:text="搜索历史"
            android:textColor="@color/common_edit_hint_color"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffdfdfe0" />

        <LinearLayout
            android:id="@+id/shop_list_history_lin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ListView
                android:id="@+id/shop_list_history"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:groupIndicator="@null"
                android:listSelector="@android:color/transparent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>