<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEEDF2"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="25dp">
        <TextView 
            android:layout_marginLeft="12sp"
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#333333"
            android:text="订单号:"/>
        <TextView 
            android:id="@+id/order_num"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#333333"
            android:text="852155669966"/>
        <TextView 
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textSize="11sp"
            android:textColor="#333333"
            android:text="待收货"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dividing_line_640_2x"/>
  	<com.zhoukl.androidRDP.RdpViews.RdpCommViews.RdpInnerListView 
  	    android:id="@+id/lv_order_item"
  	    android:layout_width="match_parent"
  	    android:listSelector="#00000000"
  	    android:layout_height="match_parent">
  	</com.zhoukl.androidRDP.RdpViews.RdpCommViews.RdpInnerListView>
	<RelativeLayout 
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="25dp">
        <TextView 
            android:layout_marginLeft="12sp"
            android:id="@+id/merchant_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#333333"
            android:text="共2件商品"/>
        <TextView 
            android:id="@+id/account_money"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/merchant_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#333333"
            android:text="合计¥ 15887.00(含运费¥100.00)"/>
    </RelativeLayout>
</LinearLayout>
