<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/phone_tv_update_pay_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/rl_code_phone_pwd"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/ll_code_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#f0eeee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_code_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:minWidth="50dp"
                android:text="@string/register_getcode_hint"
                android:textColor="@color/common_bg_cart_money"
                android:textSize="14sp" />
        </LinearLayout>

        <com.huika.cloud.views.ClearableEditText
            android:id="@+id/update_pwd_edit_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/ll_code_pwd"
            android:background="@null"
            android:digits="@string/register_phone_char"
            android:gravity="center_vertical"
            android:hint="@string/register_code_hint"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/common_text_color"
            android:textColorHint="@color/common_edit_hint_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/common_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp" >

        <ImageView
            android:id="@+id/iv_phone_pwd_update"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />

        <com.huika.cloud.views.ClearableEditText
            android:id="@+id/phone_new_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_phone_pwd_update"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/update_phone_new_pwd"
            android:maxLength="20"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textColor="@color/common_text_color"
            android:textColorHint="@color/common_edit_hint_color"
            android:textSize="14sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/common_divider" />

    <Button
        android:id="@+id/phone_update_btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/conner_button"
        android:gravity="center"
        android:text="@string/common_sure"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>