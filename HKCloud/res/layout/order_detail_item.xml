<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	  <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp">
		<ImageView 
		    android:id="@+id/iv_merchant"
		    android:layout_marginLeft="12dp"
		    android:layout_width="80dp"
		    android:layout_centerVertical="true"
		    android:layout_height="80dp"/>
		<RelativeLayout 
		    android:layout_toRightOf="@+id/iv_merchant"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent">
		    <TextView 
		        android:id="@+id/tv_merchant_money"
		        android:layout_marginRight="12dp"
		        android:textSize="11sp"
		        android:textColor="#333333"
		        android:layout_width="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_height="wrap_content"
		        android:text="¥4999.00"/>
		    <TextView 
		        android:id="@+id/tv_merchant_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:ellipsize="end"
		        android:maxLines="2"
		        android:textSize="11sp"
		        android:textColor="#333333"
		        android:layout_toLeftOf="@+id/tv_merchant_money"
		        android:layout_marginRight="12sp"
		        android:text="整体厨房橱柜定做l型爱格板厨柜定制现代简约石英石台面"
		        />
		    
		    <TextView 
		        android:id="@+id/tv_merchant_attr"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/tv_merchant_name"
		        android:textSize="11sp"
		        android:minLines="1"
		        android:layout_marginTop="15dp"
		        android:textColor="#333333"
		        android:text="颜色分类"/>
		    <TextView 
		        android:id="@+id/tv_merchant_num"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:text="X1"/>
		</RelativeLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@drawable/dividing_line_592_2x"
		    />
    </RelativeLayout>
</LinearLayout>
