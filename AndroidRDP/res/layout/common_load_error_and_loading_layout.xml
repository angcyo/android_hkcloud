<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootRl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/load_error_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efeff3"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/load_error_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/transactionrecords" />

        <TextView
            android:id="@+id/load_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/common_loading_net_error"
            android:textColor="#969696"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/click_reload"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:background="@drawable/common_loading_error_selector"
                android:clickable="true"
                android:gravity="center"
                android:minWidth="109dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/common_reload"
                android:textColor="#969696"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/click_checknetwork"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/common_loading_error_selector"
                android:clickable="true"
                android:gravity="center"
                android:minWidth="109dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/common_checknetwork"
                android:textColor="#969696"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
